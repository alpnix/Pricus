{
    "manifest_version": 2,
    "name": "Pricus",
    "version": "1.0",
    "description": "An extension that would get an item from any e-commerce website, say Amazon, and notifies the user when the its price is changed/reduced.",
    "icons": {
        "128": "icons/logo.png",
        "48": "icons/logo.png",
        "16": "icons/logo.png" 
    },
    "browser_action": {
        "default_icon": "icons/logo.png",
        "default_popup": "index.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}